.how-adopt
  position: relative
  margin-top: -120px

  &__logo-bg
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-repeat: no-repeat
    background-position: 50% 50%
    z-index: -1
    opacity: 0.1

  &__section
    overflow: hidden
    position: relative

    &:after
      content: ''
      width: 100%
      height: 427px
      left: 0px
      top: 0
      position: absolute
      background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 100%)
      z-index: 1

  &__inner
    max-width: 1920px
    width: 100%
    margin-right: auto
    margin-left: auto
    padding-top: 210px
    padding-bottom: 150px

    @media (max-width: 1279px)
      padding-bottom: 160px

    @media (max-width: 767px)
      padding-top: 180px

    @media (max-width: 639px)
      padding-bottom: 140px

  &__head
    display: flex
    align-items: center
    margin-bottom: 70px
    width: 100%
    position: relative
    z-index: 3

    @media (max-width: 767px)
      text-align: center
      justify-content: center
      margin-bottom: 35px

    @media (max-width: 639px)
      padding-right: 10px
      padding-left: 10px

    &:before, &:after
      content: ''

      @media (max-width: 767px)
        display: none

    &:before
      flex: 0 0 360px
      width: 360px
      max-width: 360px
      height: 75px
      margin-right: 40px
      background-image: url('../img/how-adopt-left-pic.png')
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      margin-left: -50px

      @media (max-width: 1599px)
        margin-left: -175px

      @media (max-width: 1279px)
        flex: 0 0 225px
        width: 225px
        max-width: 225px
        height: 55px
        margin-left: -105px

    &:after
      flex: 0 0 645px
      width: 645px
      max-width: 645px
      height: 75px
      margin-left: 20px
      background-image: url('../img/how-adopt-right-pic.png')
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      margin-right: -550px

      @media (max-width: 1279px)
        flex: 0 0 400px
        width: 400px
        max-width: 400px
        height: 55px
        margin-left: 20px
        margin-right: -180px

  &__title
    white-space: nowrap

    @media (max-width: 1279px)
      font-size: 56px

    @media (max-width: 767px)
      white-space: normal
      text-align: center

  &__items
    padding-right: 60px
    padding-left: 60px
    position: relative

    @media (max-width: 1439px)
      padding-right: 10px
      padding-left: 10px

    @media (max-width: 1279px)
      max-width: 610px + 10px + 10px
      margin-right: auto
      margin-left: auto

    @media (max-width: 639px)
      max-width: 300px + 10px + 10px

  &__item
    width: 790px

    @media (max-width: 639px)
      width: 300px !important

    &--pic
      margin-bottom: 120px

      @media (max-width: 1279px)
        width: 620px
        margin-bottom: 100px

      @media (max-width: 767px)
        width: 600px

      @media (max-width: 639px)
        width: 300px
        margin-bottom: 375px

      & ^[0]
        &__body
          min-height: 270px

          @media (max-width: 1279px)
            padding-top: 40px
            padding-bottom: 20px

          &:before
            content: ''
            position: absolute
            background-color: rgba(228, 228, 228, 0.1)
            backdrop-filter: blur(34px)
            width: 770px
            height: 250px
            top: 0
            left: 0
            z-index: 2
            clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 25%)

            @media (max-width: 1279px)
              width: 620px
              height: 300px
              clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 15%)

            @media (max-width: 767px)
              width: 600px

            @media (max-width: 639px)
              width: 300px
              height: 300px
              clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 10%)

          &:after
            content: ''
            position: absolute
            width: 770px
            height: 250px
            z-index: 1
            background-image: url('../img/how-adopt-pic.jpg')
            background-repeat: no-repeat
            background-position: 0 0
            background-size: cover
            top: 20px
            left: 20px
            clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 25%)

            @media (max-width: 1279px)
              width: 620px
              height: 300px
              top: 10px
              left: 10px
              clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 15%)

            @media (max-width: 767px)
              width: 600px

            @media (max-width: 639px)
              width: 300px
              height: 300px
              top: 5px
              left: 5px
              clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 10%)

        &__text
          @media (max-width: 1279px)
            max-width: 550px

        &__buttons
          @media (max-width: 1279px)
            bottom: -60px

          @media (max-width: 639px)
            bottom: -50px

        &__link
          min-width: 265px

          @media (max-width: 639px)
            min-width: 190px

    &--color
      @media (max-width: 1279px)
        width: 310px
        height: 430px

      @media (max-width: 639px)
        height: 300px

      & ^[0]
        &__body
          min-height: 220px

          @media (max-width: 1279px)
            min-height: 100%
            padding-top: 60px

          &:before
            content: ''
            position: absolute
            background-color: rgba(228, 228, 228, 0.1)
            backdrop-filter: blur(34px)
            width: 770px
            height: 180px
            top: 0
            left: 0
            z-index: 2
            clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 50%)

            @media (max-width: 1279px)
              width: 310px
              height: 420px
              clip-path: polygon(20% 0, 100% 0, 100% 100%, 0 100%, 0 15%)

            @media (max-width: 639px)
              width: 300px
              height: 300px
              clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 10%)

          &:after
            content: ''
            position: absolute
            width: 770px
            height: 180px
            z-index: 1
            background: linear-gradient(263.68deg, #036CCE 3.73%, #F71C1C 114.11%), rgba(228, 228, 228, 0.1)
            background-repeat: no-repeat
            background-position: 0 0
            background-size: cover
            top: 20px
            left: 20px
            clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 50%)

            @media (max-width: 1279px)
              width: 310px
              height: 420px
              top: 10px
              left: 10px
              clip-path: polygon(20% 0, 100% 0, 100% 100%, 0 100%, 0 15%)

            @media (max-width: 639px)
              width: 300px
              height: 300px
              top: 5px
              left: 5px
              clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 10%)

        &__text
          text-align: center

          @media (max-width: 1279px)
            max-width: 235px
            margin-top: 0

          p
            font-size: 24px
            margin-bottom: 10px

            @media (max-width: 1279px)
              font-size: 20px

            @media (max-width: 639px)
              font-size: 16px

        &__buttons
          bottom: 0

          @media (max-width: 1279px)
            flex-direction: column
            bottom: -40px

        &__link
          min-width: 195px

          @media (max-width: 1279px)
            min-width: 265px
            margin-right: 0
            margin-bottom: 20px

          @media (max-width: 639px)
            margin-bottom: 15px
            min-width: 190px

  &__body
    position: relative
    padding: 0
    display: flex
    flex-direction: column
    align-items: center
    padding-bottom: 25px

  &__text
    position: relative
    z-index: 3
    margin: auto
    max-width: 630px

    @media (max-width: 639px)
      max-width: 100% !important
      padding-right: 15px
      padding-left: 15px

    p
      font-size: 16px
      font-weight: 500
      line-height: 1.3
      margin-top: 0
      margin-bottom: 20px

      @media (max-width: 639px)
        font-size: 14px
        margin-bottom: 15px

      &:last-child
        margin-bottom: 0

  &__buttons
    display: flex
    justify-content: center
    align-items: center
    position: absolute
    bottom: -20px
    left: 0
    width: 100%
    z-index: 3

    .svg-icon--deepmine-icon
      flex: 0 0 30px
      width: 30px
      max-width: 30px
      height: 40px

  &__link
    margin-right: 20px

    &:last-child
      margin-right: 0

  &__pic
    width: 580px
    height: 850px
    position: absolute
    top: -200px
    right: 350px
    z-index: 5

    @media (max-width: 1919px)
      right: 100px

    @media (max-width: 1360px)
      right: 0

    @media (max-width: 1279px)
      width: 350px
      height: 600px
      top: auto
      bottom: -110px
      right: -45px

    @media (max-width: 767px)
      right: 0

    @media (max-width: 639px)
      width: 230px
      height: 340px
      bottom: 250px
      right: 50%
      transform: translateX(50%)

    img
      vertical-align: top