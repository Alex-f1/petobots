.top-line
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 200px
  z-index: 15
  background: linear-gradient(180deg, #020202 0%, rgba(9, 9, 9, 0) 100%)

  @media (max-width: 639px)
    background: none

  &__section
    padding-top: 55px

    @media (max-width: 1279px)
      padding-top: 50px

    @media (max-width: 767px)
      padding-top: 25px

  .logo
    @media (max-width: 1023px)
      margin-bottom: 40px

    @media (max-width: 767px)
      position: relative
      z-index: 5
      margin-bottom: 0

  .main-menu
    margin-left: auto
    margin-right: 60px

    @media (max-width: 1279px)
      margin-right: 40px

    @media (max-width: 1023px)
      margin-left: 0
      margin-right: 0

    @media (max-width: 767px)
      position: absolute
      width: 100%
      top: 0px
      height: 100vh
      background: #1116254d
      backdrop-filter: blur(25px)
      z-index: 1
      opacity: 0
      visibility: hidden
      transform: translateY(-50px)
      transition: opacity .3s, transform .3s, ease .3s

    &._is-show
      opacity: 1
      visibility: visible
      transform: translateY(0)

    ul
      @media (max-width: 767px)
        flex-direction: column
        justify-content: center
        align-items: center
        padding: 100px 10px 20px 10px

      li
        @media (max-width: 767px)
          margin-right: 0
          margin-bottom: 30px

  .social-links
    margin-right: 30px

    @media (max-width: 1023px)
      display: none

  .logo-company
    @media (max-width: 1023px)
      display: none

  &__wrapper
    display: flex
    align-items: center

    @media (max-width: 1023px)
      flex-direction: column

  &__button-burger
    color: #fff
    position: absolute
    top: 30px
    left: 20px
    width: 18px
    height: 13px
    padding: 0
    border: none
    background-color: transparent
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    z-index: 5

    @media (min-width: 768px)
      display: none