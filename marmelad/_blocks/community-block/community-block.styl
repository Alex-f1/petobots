  &__body
    width: 605px
    height: 340px
    background-color: rgba(17, 22, 37, 0.3)
    backdrop-filter: blur(50px)
    display: flex
    align-items: center
    padding: 30px 70px 25px 45px
    position: relative

    @media (max-width: 1279px)
      width: 300px
      height: 280px
      align-items: flex-start
      padding: 30px 15px 40px 25px
      z-index: 5

    @media (max-width: 639px)
      width: 140px
      height: 420px
      flex-direction: column
      padding: 155px 20px 20px 20px
      background: none
      backdrop-filter: none
      clip-path: inherit !important

    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: rgba(17, 22, 37, 0.3)
      backdrop-filter: blur(25px)
      clip-path: polygon(70% 0, 100% 10%, 100% 100%, 0 100%, 0 0) !important

      @media (min-width: 640px)
        display: none

  &__content
    min-height: 130px
    margin-right: 30px

    @media (max-width: 1279px)
      margin-right: 0

    @media (max-width: 639px)
      position: relative
      z-index: 5

  &__name
    display: flex
    align-items: center
    margin-bottom: 25px
    width: 100%

    @media (max-width: 1279px)
      font-size: 22px
      margin-bottom: 20px

    @media (max-width: 639px)
      font-size: 18px
      display: block

    i
      flex: 0 0 25px
      max-width: 25px
      width: 25px
      margin-left: 15px

      @media (max-width: 639px)
        max-width: 15px
        width: 100px
        margin-left: 0
        margin-top: 15px
        display: block

  &__text
    font-size: 18px
    font-weight: 400
    line-height: 1.3

    @media (max-width: 1279px)
      font-size: 16px
      max-width: 145px

    @media (max-width: 639px)
      font-size: 14px

  &__img
    flex: 0 0 185px
    width: 185px
    max-width: 185px
    position: relative
    z-index: 5

    @media (max-width: 1279px)
      flex: 0 0 100px
      width: 100px
      max-width: 100px
      position: absolute
      top: 35px
      right: 15px

    @media (max-width: 639px)
      position: static
      order: -1
      flex: none
      margin-top: -215px
      margin-bottom: 25px

    img
      vertical-align: top
