  &__body
    &:not(.active)
      display: none

  &__group
    display: flex
    flex-wrap: wrap
    margin-right: 0
    margin-bottom: 0

  &__list
    padding-bottom: 120px

    @media (max-width: 1279px)
      overflow: hidden

  &__item
    flex: 0 0 25%
    margin-bottom: -80px

    &.hide
      display: none

  @media (max-width: 1279px)
    &__categor
      &-inner
        display: flex
        align-items: flex-start
        justify-content: center

    &__categor-list
      position: relative
      z-index: 99
      display: flex
      flex-direction: column
      width: 244px
      flex: 0 0 244px
      border: 1px solid rgba(#FFFFFF, 0.4)
      border-radius: 4px
      height: 48px
      justify-content: flex-start
      margin-right: 14px

      &:before
        content: ''
        position: absolute
        right: 20px
        width: 10px
        z-index: 1
        top: -5px
        bottom: 5px
        background: url("data:image/svg+xml,%3Csvg width='8' height='6' viewBox='0 0 8 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4.57024 5.31239L7.16167 1.56921C7.62083 0.905979 7.14614 0 6.33948 0H1.15662C0.349953 0 -0.124738 0.905978 0.334422 1.56921L2.92585 5.31239C3.32351 5.88678 4.17259 5.88678 4.57024 5.31239Z' fill='white'/%3E%3C/svg%3E%0A") 0 50% no-repeat

      &:not(.opened)
        li:not(.active)
          display: none

      &.opened
        z-index: 100

        &:before
          transform: rotate(180deg)

        li
          display: block

      li
        flex: 0 0 auto
        border-radius: 0
        width: 100%
        margin: -5px 0 0 -5px

        &.active
          order: -1

          a
            clip-path: polygon(92% 0, 100% 30%, 100% 100%, 0 100%, 0 0)

        &:last-child
          a
            clip-path: polygon(100% 0, 100% 100%, 100% 100%, 0 100%, 0 0)

        a
          border-radius: 0
          font-size: 16px
          text-align: left
          padding-left: 20px

    &__filter-box
      margin: 0
      min-height: 0
      padding: 0
      background: none

    &__filter-list
      position: relative
      z-index: 99
      display: flex
      flex-direction: column
      width: 244px
      flex: 0 0 244px
      border: 1px solid rgba(#FFFFFF, 0.4)
      border-radius: 4px
      height: 48px
      justify-content: flex-start

      &:before
        content: ''
        position: absolute
        right: 20px
        width: 10px
        z-index: 1
        top: -5px
        bottom: 5px
        background: url("data:image/svg+xml,%3Csvg width='8' height='6' viewBox='0 0 8 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4.57024 5.31239L7.16167 1.56921C7.62083 0.905979 7.14614 0 6.33948 0H1.15662C0.349953 0 -0.124738 0.905978 0.334422 1.56921L2.92585 5.31239C3.32351 5.88678 4.17259 5.88678 4.57024 5.31239Z' fill='white'/%3E%3C/svg%3E%0A") 0 50% no-repeat

      &:not(.opened)
        li:not(.active)
          display: none

      &.opened
        &:before
          transform: rotate(180deg)

        li
          display: block

      li
        flex: 0 0 auto
        border-radius: 0
        width: 100%
        margin: -5px 0 0 -5px

        &.active
          order: -1

          a
            clip-path: polygon(92% 0, 100% 30%, 100% 100%, 0 100%, 0 0)

        &:last-child
          a
            clip-path: polygon(100% 0, 100% 100%, 100% 100%, 0 100%, 0 0)

        a
          border-radius: 0
          font-size: 16px
          text-align: left
          display: block
          padding: 16px 0 16px 44px
          background-color: #2B3F51
          background-position: 18px 50%

    &__item
      flex: 0 0 33.333%
      margin-bottom: -60px

  @media (max-width: 639px)
    &__categor
      &-inner
        display: block

      &-list
        margin: 0 auto 15px

        li
          a
            font-size: 14px

    &__filter-box
      margin: 0 auto
      width: 244px

    &__filter-list
      li
        a
          font-size: 14px

    &__item
      flex: 0 0 50%
      margin-bottom: -30px

      &:nth-child(2n)
        .product-thumbs__description
          left: 0
          transform: rotate(-90deg) translate(-110%, -25px)

  @media (max-width: 1279px) and (min-width: 640px)
    &__item
      &:nth-child(3n)
        .product-thumbs__description
          left: 0
          transform: rotate(-90deg) translate(-140%, -25px)

  @media (min-width: 1024px)
    &__categor
      position: sticky
      top: 20px
      left: 0
      right: 0
      z-index: 102
      transition: top 0.3s, ease 0.3s

      &._is-fixed-top-line
        top: 100px