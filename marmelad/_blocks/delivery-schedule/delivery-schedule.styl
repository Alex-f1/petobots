.delivery-schedule
  overflow: hidden

  &__section
    position: relative
    padding-top: 180px
    padding-bottom: 200px

    @media (max-width: 1279px)
      padding-top: 100px
      padding-bottom: 110px

    @media (max-width: 639px)
      padding-top: 90px
      padding-bottom: 100px

  &__bg
    content: ''
    width: 100%
    height: 1160px
    background-color: rgba(82, 82, 82, 0.2)
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25))
    clip-path: polygon(0 0, 8% 0, 11% 5%, 89% 5%, 92% 0, 100% 0, 100% 100%, 92% 100%, 89% 95%, 12% 95%, 8% 100%, 0 100%)
    backdrop-filter: blur(24px)
    position: absolute
    top: 0
    left: 0
    z-index: 2

    .blur-circle-line
      bottom: -100%
      left: 50%
      transform: translate(-50%, -15%)

    @media (max-width: 1279px)
      height: 820px

    @media (max-width: 639px)
      height: 1160px

  &__title
    position: relative
    z-index: 5
    margin-bottom: 85px

    @media (max-width: 1279px)
      font-size: 56px
      margin-bottom: 50px

    @media (max-width: 639px)
      font-size: 50px

  &__items
    max-width: 1100px
    width: 100%
    margin-right: auto
    margin-left: auto
    transform: translateX(45px)
    position: relative
    z-index: 5

    @media (max-width: 1279px)
      max-width: 620px
      transform: translateX(10px)

    @media (max-width: 639px)
      max-width: 300px
      transform: translateX(0)

  &__item
    margin-bottom: 5px
    display: flex

    @media (max-width: 639px)
      margin-bottom: 15px

  &__body
    display: flex
    align-items: center
    width: 100%

  &__number
    font-size: 80px
    font-weight: 700
    line-height: 1
    text-align: center
    text-shadow: 0px 1px 13px rgba(255, 255, 255, 0.45)
    display: flex
    justify-content: center
    align-items: center
    flex: 0 0 210px
    width: 210px
    max-width: 210px
    height: 120px
    padding-right: 25px
    background-color: rgba(201, 223, 255, 0.1)
    backdrop-filter: blur(24px)
    clip-path: polygon(25% 0, 100% 0, 75% 50%, 75% 100%, 0 100%, 0 50%)

    @media (max-width: 1279px)
      font-size: 46px
      flex: 0 0 150px
      width: 150px
      max-width: 150px
      height: 100px
      clip-path: polygon(30% 0, 100% 0, 75% 45%, 75% 100%, 0 100%, 0 40%)

    @media (max-width: 639px)
      font-size: 80px
      flex: 0 0 80px
      width: 80px
      max-width: 80px
      height: 160px
      clip-path: polygon(25% 0, 100% 0, 100% 85%, 75% 100%, 0 100%, 0 15%)
      padding-right: 0

  &__desc
    font-size: 16px
    color: #F0F0F0
    font-weight: 500
    line-height: 1.5
    flex: 1 1 auto
    background-color: rgba(201, 223, 255, 0.1)
    backdrop-filter: blur(24px)
    clip-path: polygon(6% 0, 100% 0, 100% 50%, 93% 100%, 0 100%, 0 52%)
    width: 910px
    height: 120px
    transform: translateX(-45px)
    display: flex
    align-items: center
    padding-left: 75px

    @media (max-width: 1279px)
      width: 545px
      height: 100px
      transform: translateX(-30px)
      padding-left: 40px
      clip-path: polygon(8% 0, 100% 0, 100% 70%, 95% 100%, 0 100%, 0 45%)

    @media (max-width: 639px)
      font-size: 14px
      width: 210px
      height: 160px
      transform: translateX(0)
      padding: 40px 25px 40px 30px
      margin-left: 10px
      clip-path: polygon(15% 0, 100% 0, 100% 85%, 85% 100%, 0 100%, 0 15%)

    a
      font-size: 18px
      color: #148AF3
      font-weight: 600
      line-height: 1.1
      text-decoration: underline

      &:hover
        text-decoration: none

  .bg-blur
    height: 1160px
    background-color: #040404
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25))
    clip-path: polygon(0 0, 8% 0, 11% 5%, 89% 5%, 92% 0, 100% 0, 100% 100%, 92% 100%, 89% 95%, 12% 95%, 8% 100%, 0 100%)
    backdrop-filter: blur(24px)
    position: absolute
    top: 0
    left: 0
    z-index: 2

  .blur-big-diagonal-line
    position: absolute
    z-index: 3

    &--blue
      width: 716px
      height: 716px
      bottom: -60%
      left: 55%
      transform: translate(-50%, -50%)

    &--blue2
      width: 450px
      height: 450px
      top: 20%
      left: -10%

    &--blue3
      width: 55px
      height: 55px
      bottom: 25%
      right: 5%

    &--red
      width: 440px
      height: 440px
      top: 10%
      right: -10%

    &--red2
      width: 200px
      height: 200px
      bottom: 20%
      left: 5%

    &--red3
      width: 145px
      height: 145px
      bottom: 30%
      right: 30%

    &--red4
      width: 85px
      height: 85px
      top: 40%
      left: 5%

    &--red5
      width: 60px
      height: 60px
      top: 5%
      right: 5%