.collection-block
  position: relative
  padding-top: 25px

  &:before
    content: ''
    position: absolute
    left: 0
    right: 0
    top: 50%
    height: 50%
    transform: translateY(-50%)
    background: linear-gradient(180deg, #6580B5 0%, #171F23 100%)
    mix-blend-mode: screen
    filter: blur(500px)

  &__inner
    position: relative

  &__title
    margin-bottom: 34px

  &__categor
    margin-bottom: 28px

  &__categor-list
    padding: 0
    list-style: none
    margin: 0
    display: flex
    justify-content: center

    li
      width: 174px
      flex: 0 0 174px
      margin: 0 5px

      &.active
        a
          background: #2595FA

          &:hover
            cursor: default
            background: #2595FA

      @media (min-width: 1280px)
        &:last-child
          a
            clip-path: polygon(90% 0, 100% 30%, 100% 100%, 0 100%, 0 0)

        &:first-child
          a
            clip-path: polygon(10% 0, 100% 0, 100% 100%, 0 100%, 0 30%)

      a
        text-decoration: none
        font-family: 'Aura', sans-serif
        font-style: normal
        font-weight: 400
        font-size: 18px
        line-height: 1
        text-align: center
        text-transform: uppercase
        color: #FFFFFF
        display: block
        background: #2B3F51
        border-radius: 5px
        padding: 16px 0
        transition: all 0.3s ease

        &:hover
          background: #516A82

  &__filter-box
    background: url('../img/collect-menu-bg.png') 50% 0 no-repeat
    padding-top: 64px
    min-height: 101px
    margin-top: -43px

  &__filter-list
    padding: 0
    margin: 0
    line-height: 1
    font-size: 0
    list-style: none
    text-align: center

    &.hide
      display: none

    &:not(.active)
      display: none

    li
      display: inline-block
      vertical-align: top
      margin: 0 15px

      &.active
        a
          cursor: default

