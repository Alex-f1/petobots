.economics-block
  position: relative

  &:after
    content: ''
    width: 100%
    height: 438px
    position: absolute
    left: 0
    top: -120px
    background: linear-gradient(180deg, #040404 0%, rgba(4, 4, 4, 0) 100%)

  &__section
    height: 100%
    padding-top: 150px
    padding-bottom: 95px
    position: relative

    @media (max-width: 639px)
      padding-top: 70px

  &__logo-bg
    position: absolute
    top: -120px
    left: 0
    width: 100%
    height: 100%
    background-repeat: no-repeat
    background-position: 50% 100%
    z-index: -1

  &__title
    position: relative
    z-index: 2
    margin-bottom: 70px

    @media (max-width: 1279px)
      font-size: 56px
      margin-bottom: 35px

    @media (max-width: 639px)
      font-size: 50px

  &__items
    position: relative
    z-index: 2
    padding-top: 140px
    padding-bottom: 45px
    margin-bottom: 50px

    @media (max-width: 1279px)
      max-width: 620px
      width: 100%
      padding-top: 84px
      margin-right: auto
      margin-left: auto

    @media (max-width: 639px)
      padding-bottom: 264px
      max-width: 300px
      margin-bottom: 80px

  &__way
    width: 580px
    height: 380px
    margin-right: auto
    margin-left: auto

    @media (max-width: 1279px)
      width: 240px
      height: 215px

    @media (max-width: 639px)
      width: 280px
      height: 275px

    img
      vertical-align: top
      display: none

  &__way-desktop
    @media (min-width: 1280px)
      display: block !important

  &__way-tablet
    @media (min-width: 640px) and (max-width: 1279px)
      display: block !important

  &__way-mobile
    @media (min-width: 320px) and (max-width: 639px)
      display: block !important

  &__item
    position: absolute

    &--first
      top: 0
      left: 50%
      transform: translateX(-50%)

      & ^[0]
        &__body
          width: 330px
          height: 140px
          clip-path: polygon(10% 0, 100% 0, 100% 80%, 90% 100%, 0 100%, 0 20%)

          @media (max-width: 1279px)
            width: 230px
            height: 85px
            padding-top: 13px

        &__options
          display: flex
          align-items: center

          span
            margin-right: 45px

            @media (max-width: 1279px)
              margin-right: 15px

            @media (max-width: 639px)
              margin-right: 35px

            &:last-child
              margin-right: 0

    &--second
      bottom: 0
      left: 0

      & ^[0]
        &__body
          width: 330px
          height: 365px
          clip-path: polygon(15% 0, 100% 0, 100% 85%, 85% 100%, 0 100%, 0 15%)

          @media (max-width: 1279px)
            width: 190px
            height: 230px
            padding: 23px 15px
            clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%)

          @media (max-width: 639px)
            width: 140px
            height: 265px
            padding-top: 30px
            clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%)

        &__name
          text-align: right
          margin-bottom: 60px

          @media (max-width: 1279px)
            margin-bottom: 25px

          @media (max-width: 639px)
            margin-bottom: 15px
            margin-top: auto

        &__options
          display: flex
          flex-direction: column
          align-items: flex-end
          margin-bottom: 50px

          @media (max-width: 1279px)
            margin-bottom: 30px

          @media (max-width: 639px)
            order: -1
            transform: rotate(90deg)
            align-items: flex-start

          span
            margin-bottom: 110px

            @media (max-width: 1279px)
              margin-bottom: 50px

            &:last-child
              margin-bottom: 0

    &--third
      right: 0
      bottom: 0

      & ^[0]
        &__body
          width: 330px
          height: 390px
          clip-path: polygon(0 0, 85% 0, 100% 15%, 100% 100%, 15% 100%, 0 85%)

          @media (max-width: 1279px)
            width: 190px
            height: 230px
            padding: 15px 18px
            clip-path: polygon(0 0, 90% 0, 100% 10%, 100% 100%, 10% 100%, 0 90%)

          @media (max-width: 639px)
            width: 140px
            height: 265px
            padding-top: 30px
            clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%)

        &__name
          text-align: left
          margin-bottom: 50px

          @media (max-width: 1279px)
            margin-bottom: 10px

          @media (max-width: 639px)
            margin-bottom: 0
            margin-top: auto
            text-align: center

        &__options
          display: flex
          flex-direction: column

          @media (max-width: 639px)
            order: -1
            transform: rotate(90deg)

          span
            margin-bottom: 100px

            @media (max-width: 1279px)
              margin-bottom: 20px

            @media (max-width: 639px)
              margin-bottom: 30px

            &:last-child
              margin-bottom: 0

  &__body
    padding: 25px 35px
    background-color: rgba(217, 217, 217, 0.05)
    backdrop-filter: blur(10.7778px)
    filter: drop-shadow(0px 7.77778px 15.5556px rgba(0, 0, 0, 0.25))
    display: flex
    flex-direction: column

    @media (max-width: 1279px)
      padding-right: 25px
      padding-left: 25px
      padding-bottom: 0
      backdrop-filter: blur(8.41485px)

  &__name
    font-size: 30px
    line-height: 1
    text-align: center
    margin-bottom: 40px

    @media (max-width: 1279px)
      font-size: 20px
      margin-bottom: 20px

    @media (max-width: 639px)
      font-size: 18px

  &__options
    span
      font-size: 20px
      font-weight: 600
      line-height: 1.2

      @media (max-width: 1279px)
        font-size: 14px

      @media (max-width: 639px)
        font-size: 12px

  &__links
    text-align: center

    a
      font-size: 18px
      color: #148AF3
      font-weight: 600
      line-height: 1.1
      text-align: center
      text-decoratione: underline
      margin-right: 35px

      @media (max-width: 1279px)
        font-size: 16px

      @media (max-width: 639px)
        font-size: 14px
        margin-right: 10px

      &:hover
        text-decoration: none

      &:last-child
        margin-right: 0

  &__bottom
    display: flex
    align-items: center
    max-width: 835px
    width: 100%
    margin-right: auto
    margin-left: auto

    @media (max-width: 1279px)
      max-width: 620px

    @media (max-width: 639px)
      max-width: 260px
      flex-direction: column

    & ^[0]
      &__name
        text-align: left

        @media (max-width: 1279px)
          text-align: center

        @media (max-width: 639px)
          margin-bottom: 200px

  &__pic
    flex: 0 0 275px
    width: 275px
    max-width: 275px
    margin-right: 10px

    @media (max-width: 1279px)
      flex: 0 0 210px
      width: 210px
      max-width: 210px

      @media (max-width: 639px)
        flex: none
        width: 170px
        max-width: 170px
        margin-bottom: -200px

    img
      vertical-align: top

  &__text
    p
      font-size: 18px
      font-weight: 400
      line-height: 1.3
      margin-bottom: 15px

      @media (max-width: 1279px)
        font-size: 16px

      @media (max-width: 639px)
        font-size: 14px

      &:last-child
        margin-bottom: 0

.popup-block
  padding: 0