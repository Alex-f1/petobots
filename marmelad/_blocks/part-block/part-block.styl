.part-block
  padding-top: 50px
  padding-bottom: 135px
  background-repeat: no-repeat
  background-size: cover
  background-position: 50% 0
  position: relative
  overflow: hidden

  @media (max-width: 1279px)
    padding-bottom: 230px

  @media (max-width: 767px)
    padding-top: 80px
    padding-bottom: 100px

  &:after
    content: ''
    width: 100%
    height: 866px
    position: absolute
    left: 0
    top: 0
    background: linear-gradient(180deg, #040404 0%, rgba(4, 4, 4, 0) 100%)
    z-index: 1

  &__inner
    text-align: center
    position: relative
    z-index: 2
    padding-right: 10px
    padding-left: 10px

  &__titel
    margin-bottom: 35px

    @media (max-width: 767px)
      margin-bottom: 20px

  &__logo
    max-width: 265px
    width: 100%
    margin-right: auto
    margin-left: auto
    margin-bottom: 15px

    @media (max-width: 767px)
      max-width: 135px
      margin-bottom: 20px

    img
      vertical-align: top

  &__desc
    font-size: 20px
    font-weight: 500
    line-height: 1.3
    text-align: center
    max-width: 635px
    width: 100%
    margin-right: auto
    margin-left: auto

    @media (max-width: 767px)
      font-size: 16px

  &__buttons
    margin-top: 200px
    display: flex
    justify-content: center

    @media (max-width: 767px)
      flex-direction: column
      max-width: 220px
      margin-right: auto
      margin-left: auto
      margin-top: 70px

  &__link
    min-width: 270px
    margin-right: 20px

    @media (max-width: 767px)
      min-width: 220px
      margin-right: 0
      margin-bottom: 20px

    &:last-child
      margin-right: 0
      margin-bottom: 0