  &__section
    background-repeat: no-repeat
    background-size: cover
    background-position: 50% 100%
    padding-bottom: 150px
    padding-top 60px

  &__title
    margin-bottom: 90px

    @media (max-width: 1279px)
      font-size: 56px
      margin-bottom: 35px

    @media (max-width: 639px)
      font-size: 50px
      margin-bottom: 40px

  &__cols
    display: flex

    @media (max-width: 1279px)
      max-width: 620px
      margin-right: auto
      margin-left: auto

    @media (max-width: 639px)
      display: block

    @media (max-width: 639px)
      max-width: 300px

  &__col
    &:last-child
      margin-left: 170px

      @media (max-width: 1279px)
        margin-left: 85px

      @media (max-width: 639px)
        margin-left: 0
        margin-top: 140px

  &__col-title
    font-weight: 700
    font-size: 50px
    line-height: 0.7
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    margin-bottom: 20px

    @media (max-width: 1279px)
      font-size: 26px

    small
      font-size: 20px
      font-weight: 700
      line-height: 24px
      margin-top: 10px

      @media (max-width: 1279px)
        font-size: 14px

  &__items
    @media (max-width: 639px)
      display: flex
      padding-top: 100px

  &__item
    margin-bottom: 40px

    @media (max-width: 1279px)
      margin-bottom: 20px

    @media (max-width: 639px)
      margin-right: 20px
      margin-bottom: 0

    &:last-child
      margin-bottom: 0
      margin-right: 0

    &:nth-child(1)
      & ^[0]
        &__body
          clip-path: polygon(10% 0, 90% 0, 100% 15%, 100% 100%, 0 100%, 0 15%)

    &:nth-child(2)
      & ^[0]
        &__body
          clip-path: polygon(0 0, 100% 0, 100% 85%, 90% 100%, 10% 100%, 0 85%)

    &--single
      position: relative

      & ^[0]
        &__body
          flex-direction: column
          width: 465px
          height: 720px
          padding: 145px 65px 60px 80px
          clip-path: polygon(12% 0, 88% 0, 100% 8%, 100% 92%, 100% 100%, 12% 100%, 0 92%, 0 8%) !important
          z-index: 1

          @media (max-width: 1279px)
            width: 235px
            height: 575px
            padding: 75px 35px 50px 35px
            clip-path: polygon(12% 0, 88% 0, 100% 8%, 100% 92%, 100% 100%, 15% 100%, 0 92%, 0 8%) !important

          @media (max-width: 639px)
            width: 100%
            height: 270px
            padding: 110px 20px 20px 20px
            clip-path: inherit !important

          &:before
            clip-path: polygon(80% 0, 100% 20%, 100% 100%, 0 100%, 0 0) !important

        &__img
          flex: none
          order: -1
          margin-left: auto
          margin-right: auto
          margin-bottom: 40px

          @media (max-width: 1279px)
            position: static
            margin-bottom: 30px

        &__content
          margin-right: 0 !important

        &__text
          max-width: 100%

