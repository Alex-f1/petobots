.economics-block
  position: relative
  height: 100%

  &:after
    content: ''
    width: 100%
    height: 438px
    position: absolute
    left: 0
    top: -120px
    background: linear-gradient(180deg, #040404 0%, rgba(4, 4, 4, 0) 100%)

  &__section
    height: 100%
    padding-top: 150px
    position: relative

  &__logo-bg
    position: absolute
    top: -1000px
    left: 0
    width: 100%
    height: 100%
    background-repeat: no-repeat
    background-position: 50% 0
    z-index: 1

  &__title
    position: relative
    z-index: 2

  &__items
    position: relative
    z-index: 2

  &__way
    width: 575px
    height: 380px

    img
      vertical-align: top

  &__item
    &--first
      & ^[0]
        &__body
          width: 330px
          height: 140px
          clip-path: polygon(10% 0, 100% 0, 100% 80%, 90% 100%, 0 100%, 0 20%)

  &__body
    background-color: rgba(217, 217, 217, 0.05)
    backdrop-filter: blur(14.7778px)
    filter: drop-shadow(0px 7.77778px 15.5556px rgba(0, 0, 0, 0.25))
