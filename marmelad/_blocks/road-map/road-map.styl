.road-map
  overflow: hidden
  padding-top: 120px
  height: 1140px
  position: relative

  &:after
    content: ''
    width: 100%
    height: 410px
    left: 0px
    top: 0
    position: absolute
    background: linear-gradient(180deg, #040404 0%, rgba(4, 4, 4, 0) 100%)
    z-index: 1

  @media (max-width: 1279px)
    height: 1610px

  @media (max-width: 767px)
    height: 950px

  &__section, &__inner
    height: 100%

  &__title
    position: relative
    z-index: 2

  &__pic
    width: 1920px
    margin-right: auto
    margin-left: auto
    text-align: center
    position: absolute
    top: -50px
    left: 50%
    transform: translateX(-50%)

    @media (max-width: 1279px)
      width: 820px
      top: 100px

    @media (max-width: 767px)
      width: 408px
      top: 150px

    img
      vertical-align: top
      display: none

      &.roadmap-desktop
        @media (min-width: 1280px)
          display: block

      &.roadmap-tablet
        @media (min-width: 768px) and (max-width: 1279px)
          display: block

      &.roadmap-mobile
        @media (min-width: 320px) and (max-width: 767px)
          display: block

  &__items
    width: 1240px
    position: relative
    z-index: 5
    margin-right: auto
    margin-left: auto
    display: flex
    height: 100%
    align-items: center

    @media (max-width: 1279px)
      flex-wrap: wrap
      align-items: flex-start
      width: 800px

    @media (max-width: 767px)
      width: 410px

  &__item
    &:nth-child(1)
      transform: translate(0, 50px)

      @media (max-width: 1439px)
        transform: translate(-10px, 50px)

      @media (max-width: 1279px)
        transform: translate(120px, 60px)

      @media (max-width: 767px)
        transform: translate(10px, 50px)

      & ^[0]
        &__body
          width: 250px
          height: 80px

          @media (max-width: 1279px)
            width: 190px
            height: 70px

          @media (max-width: 767px)
            width: 100px
            height: 50px

          &:before
            @media (max-width: 1279px)
              bottom: auto
              top: 100%
              height: 195px

            @media (max-width: 767px)
              height: 125px

    &:nth-child(2)
      transform: translate(0, 200px)

      @media (max-width: 1439px)
        transform: translate(-40px, 200px)

      @media (max-width: 1279px)
        transform: translate(60px, 135px)

      @media (max-width: 767px)
        transform: translate(-15px, 90px)

      & ^[0]
        &__body
          width: 275px
          height: 95px

          @media (max-width: 1279px)
            width: 220px
            height: 80px

          @media (max-width: 767px)
            width: 110px
            height: 65px

          &:before
            height: 220px

            @media (max-width: 1279px)
              height: 40px
              bottom: auto
              top: 100%

            @media (max-width: 767px)
              height: 30px

    &:nth-child(3)
      transform: translate(0, 50px)

      @media (max-width: 1439px)
        transform: translate(-55px, 50px)

      @media (max-width: 1279px)
        transform: translate(15px, 215px)

      @media (max-width: 767px)
        transform: translate(-49px, 145px)

      & ^[0]
        &__body
          width: 280px
          height: 115px

          @media (max-width: 1279px)
            width: 285px
            height: 100px

          @media (max-width: 767px)
            width: 150px
            height: 75px

          &:before
            height: 170px

            @media (max-width: 1279px)
              height: 45px
              bottom: auto
              top: 100%

            @media (max-width: 767px)
              height: 35px

    &:nth-child(4)
      transform: translate(-25px, 200px)

      @media (max-width: 1439px)
        transform: translate(-70px, 200px)

      @media (max-width: 1279px)
        transform: translate(480px, 100px)

      @media (max-width: 767px)
        transform: translate(195px, 80px)

      & ^[0]
        &__body
          width: 300px
          height: 95px

          @media (max-width: 1279px)
            width: 235px

          @media (max-width: 767px)
            width: 115px
            height: 75px

          &:before
            height: 275px

            @media (max-width: 1279px)
              height: 2px
              width: 25px
              bottom: 25px
              left: -25px
              transform: none

            @media (max-width: 767px)
              width: 15px
              left: -15px

    &:nth-child(5)
      transform: translate(-50px, 50px)

      @media (max-width: 1439px)
        transform: translate(-80px, 50px)

      @media (max-width: 1279px)
        transform: translate(-140px, 390px)

      @media (max-width: 767px)
        transform: translate(-105px, 240px)

      & ^[0]
        &__body
          width: 260px
          height: 95px

          @media (max-width: 1279px)
            width: 240px
            height: 85px

          @media (max-width: 767px)
            width: 130px
            height: 65px

          &:before
            height: 190px

            @media (max-width: 1279px)
              height: 50px

            @media (max-width: 767px)
              height: 25px

    &:nth-child(6)
      transform: translate(-30px, 200px)

      @media (max-width: 1439px)
        transform: translate(-60px, 200px)

      @media (max-width: 1279px)
        transform: translate(-190px, 490px)

      @media (max-width: 767px)
        transform: translate(-150px, 290px)

      & ^[0]
        &__body
          width: 250px
          height: 95px

          @media (max-width: 1279px)
            width: 280px
            height: 75px

          @media (max-width: 767px)
            width: 135px
            height: 50px

          &:before
            height: 265px

            @media (max-width: 1279px)
              height: 50px

            @media (max-width: 767px)
              height: 35px

    &:nth-child(7)
      transform: translate(-30px, 50px)

      @media (max-width: 1439px)
        transform: translate(-70px, 50px)

      @media (max-width: 1279px)
        transform: translate(470px, 80px)

      @media (max-width: 767px)
        transform: translate(190px, 50px)  

      & ^[0]
        &__body
          width: 240px
          height: 85px

          @media (max-width: 1279px)
            height: 80px

          @media (max-width: 767px)
            width: 120px
            height: 60px

          &:before
            height: 190px

            @media (max-width: 1279px)
              height: 65px

            @media (max-width: 767px)
              height: 30px

  &__body
    padding: 25px
    position: relative
    display: flex
    align-items: center

    @media (max-width: 767px)
      padding: 10px

    &:before
      content: ''
      position: absolute
      bottom: 100%
      left: 50%
      transform: translateX(-50%)
      width: 2px
      height: 185px
      background-color: #746e95

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: rgba(201, 223, 255, 0.1)
      backdrop-filter: blur(24px)
      clip-path: polygon(10% 0, 100% 0, 100% 75%, 90% 100%, 0 100%, 0 25%)

  &__number
    font-size: 36px
    font-weight: 800
    line-height: 1
    opacity: 0.3
    margin-right: 20px
    position: relative
    z-index: 2

    @media (max-width: 767px)
      font-size: 24px
      margin-right: 20px

  &__name
    font-size: 20px
    font-weight: 500
    line-height: 1.3
    position: relative
    z-index: 2

    @media (max-width: 1279px)
      font-size: 18px

    @media (max-width: 767px)
      font-size: 12px