.hero
  color: #fff
  height: 100%

  &__section
    height: 100%

  &__inner
    height: 100%
    display: flex
    flex-direction: column
    justify-content: center

  &__content
    position: relative
    z-index: 10

    @media (max-width: 1023px)
      padding-top: 125px
      max-width: 630px
      width: 100%
      margin-right: auto
      margin-left: auto

    @media (max-width: 767px)
      text-align: center

  &__title
    font-size: 120px
    font-family: $fonts.headings
    line-height: 0.7
    font-weight: 400
    text-transform: uppercase
    text-shadow: 1px 0px 0px #FA364D, -1px 0px 0px #2595FA
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 1023px)
      font-size: 80px
      margin-bottom: 15px

    @media (max-width: 767px)
      font-size: 60px
      margin-bottom: 10px

  &__desc
    font-style: normal
    font-weight: 700
    font-size: 43px
    line-height: 1.1

    @media (max-width: 1023px)
      font-size: 26px
      margin-bottom: 150px

    @media (max-width: 767px)
      font-size: 24px

  &__note
    font-weight: 700
    font-size: 14px
    line-height: 1.1
    background: linear-gradient(132.13deg, #FFFFFF 0.87%, #BDBDBD 0.87%, #FFFFFF 29.6%, #BABABA 34.06%, #FFFFFF 66.54%, #BABABA 72.08%)
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    text-fill-color: transparent
    display: flex
    align-items: center

    @media (max-width: 1023px)
      font-size: 20px
      flex-direction: column
      justify-content: center
      align-items: center

    .logo-company
      margin-left: 10px
      margin-right: 10px
      transform: translateY(2px)

      @media (max-width: 1023px)
        margin: 5px 0
        transform: none

  &__buttons
    display: flex
    margin-top: 60px
    padding-left: 10px

    @media (max-width: 1023px)
      margin-top: 55px

    @media (max-width: 767px)
      flex-wrap: wrap
      max-width: 180px
      width: 100%
      margin-right: auto
      margin-left: auto

  &__button
    margin-right: 20px

    @media (max-width: 767px)
      min-width: auto
      width: 40px
      margin-right: 25px
      padding: 0

    span
      @media (max-width: 767px)
        display: none

    .svg-icon
      @media (max-width: 767px)
        margin-right: 0

    &:last-child
      margin-right: 0

    &--mods
      position: relative
      filter: drop-shadow(0px 4px 20px #148AF3)

      @media (max-width: 767px)
        min-width: 170px
        margin-bottom: 15px
        margin-right: 0

      span
        width: 200px
        height: 58px
        background-color: #3DA3FF
        position: absolute
        top: -10px
        left: -10px
        display: flex !important
        align-items: center
        justify-content: center
        clip-path: polygon(90% 0, 100% 30%, 100% 100%, 0 100%, 0 0)

        @media (max-width: 1023px)
          height: 48px

        @media (max-width: 767px)
          width: 170px
          height: 40px
          clip-path: polygon(88% 0, 100% 52%, 100% 100%, 0 100%, 0 0)

    &--tg-mobile
      display: none

      @media (max-width: 767px)
        display: flex

  &__main-pic
    width: 687px
    height: 849px
    position: absolute
    top: -50px
    right: 0
    z-index: 5

    @media (max-width: 1439px)
      right: -300px

    @media (max-width: 1023px)
      top: 0
      right: -330px

    @media (max-width: 639px)
      width: 445px
      height: 625px
      top: 50px
      right: -220px

    img
      vertical-align: top

  .blur-line
    &--blue
      top: 310px
      left: 630px

      @media (max-width: 1599px)
        top: 280px
        left: 390px

      @media (max-width: 1023px)
        top: 245px
        left: 190px

      @media (max-width: 639px)
        top: 275px
        left: 15px

    &--red
      top: 495px
      right: 725px

      @media (max-width: 1023px)
        top: 525px
        right: 250px

      @media (max-width: 639px)
        top: 570px
        right: -10px

  .blur-big-line
    &--blue
      top: 160px
      right: 430px
      z-index: 6

      @media (max-width: 1023px)
        right: 80px
        top: 150px

      @media (max-width: 639px)
        right: -110px
        top: 40px

    &--red
      // top: 300px
      bottom 200px
      right: -1100px

      @media (max-width: 1439px)
        top: 200px
        right: -1200px
        z-index: 6

      @media (max-width: 639px)
        top: 155px
        right: -1300px

  .blur-circle-line
    &--blue
      top: -460px
      right: -250px

      @media (max-width: 1023px)
        top: -750px
        right: -550px

      @media (max-width: 639px)
        top: -350px
        right: -950px

    &--blue2
      top: -600px
      left: -650px

      @media (max-width: 1023px)
        display: none

    &--red
      top: -410px
      right: -1200px

      @media (max-width: 639px)
        top: -900px
        right: -2020px

.blur-line
  position: absolute
  display: block
  z-index: 1

  &--blue
    width: 79px
    height: 23px

  &--red
    width: 95px
    height: 47px

  img
    vertical-align: top

.blur-big-line
  position: absolute
  display: block
  z-index: 2

  &--blue
    width: 400px
    height: 134px

  &--red
    width: 1441px
    height: 597px

  img
    vertical-align: top

.blur-circle-line
  position: absolute
  display: block
  z-index: 1

  &--blue
    width: 1458px
    height: 1449px

  &--blue2
    width: 1107px
    height: 1106px

  &--blue3
    width: 1440px
    height: 1428px

  &--red
    width: 1834px
    height: 1819px

  img
    vertical-align: top