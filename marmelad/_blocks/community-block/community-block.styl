.community-block
  padding-top: 100px
  position: relative
  z-index: 5
  @media (max-width: 1279px)
    padding-top 30px

    // &:before
    //   height 30px


  // &:before
  //   content ""
  //   position absolute
  //   top 0
  //   left 0
  //   right 0
  //   height 100px
